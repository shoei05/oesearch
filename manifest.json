{
  "manifest_version": 3,
  "name": "OpenEvidence Search Helper",
  "version": "1.0.4",
  "description": "Append an SR/MA + GRADE English prompt to your query and search OpenEvidence.",
  "action": {
    "default_title": "OpenEvidence Search Helper",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://openevidence.com/*",
    "https://www.openevidence.com/*"
  ],
  "omnibox": {
    "keyword": "oe"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://openevidence.com/*",
        "https://www.openevidence.com/*"
      ],
      "js": [
        "content-oe.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
